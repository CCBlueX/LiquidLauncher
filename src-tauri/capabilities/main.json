{
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "path:default",
        "event:default",
        "window:default",
        "app:default",
        "resources:default",
        "menu:default",
        "tray:default",
        "window:allow-set-title",
        "window:allow-start-dragging",
        "dialog:allow-message",
        "dialog:allow-open",
        "dialog:allow-confirm",
        "dialog:allow-ask",
        "shell:allow-open",
        "process:allow-exit",
        "updater:default"
    ]
}